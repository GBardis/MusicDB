<div id="page-wrapper">
  <div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Dashboard <small>New Band</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i> Band
          </li>
        </ol>
        <%= render 'admin/flash_messages'%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <ul>
          <%@bands.each do |band| %>
            <li>
              <%=band.name%>
              <ul>
                <% band.bandmembers.each do |member|%>
                  <li>
                    <%= link_to Artist.find(member.artist_id).firstname ,artist_path(member.artist_id)%>
                    <%= link_to Artist.find(member.artist_id).lastname ,artist_path(member.artist_id)%>
                  </li>
                <%end%>
              </ul>
            </li>
          <%end%>
        </ul>
        <%= link_to 'Back', admin_dashboard_path %>
      </div>
    </div>
  </div>
</div>
