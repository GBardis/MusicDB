<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <li class="active">
          <i class="fa fa-dashboard"></i> Album
        </li>
      </ol>
      <%= render 'admin/flash_messages'%>
      <div class="panel panel-default">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Release Date</th>
              <th>Category/Genre</th>
              <th>Artist/Band</th>
              <th><%= link_to "New" , admin_bands_new_path, class: "pull-right btn btn-success btn-md"%></th>
            </tr>
          </thead>
          <tbody>
            <%@bands.each do |band|%>
              <%= render 'bands/band_row', band: band%>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
