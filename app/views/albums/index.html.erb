<!-- Carousel
    ================================================== -->
<div class="container" id="carousel-container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img class="first-slide" src="https://wallpaperscraft.com/image/metallica_youth_band_members_haircut_3671_1920x1080.jpg" alt="First slide">
      </div>
      <div class="item">
        <img class="third-slide" src="http://img.wennermedia.com/social/led-zeppelin-iv-album-release-review-35c87652-3510-4318-9145-25a24db837f5.jpg" alt="Third slide">
      </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<!-- /.carousel -->
<div  class='container'>
  <div class="row">
    <div class="col-md-5 col-md-offset-4">
      <h1>Music DB</h1>
    </div>
  </div>
  <div class='row'>
    <%= render 'admin/flash_messages'%>
    <%#=render 'categories/index_categories'%>
  </div>
  <div class="row">
    <%#=link_to 'Admin Dashboard',admin_dashboard_path%>
  </div>
  <div class="row">
    <%=render 'search/form'%>
  </div>
</div>
<%unless @latest_albums.nil?%>
  <div id="jumbotron-container" class="container">
    <div id="latest-jumbotron" class="jumbotron">
      <!-- Three columns of text below the carousel -->
      <div class="row">
        <% @latest_albums.each do |latest_album| %>
          <div id="latest-subcol-container" class="col-md-4">
            <div class="row">
              <div id="latest-container" class="col-md-11">
                <%latest_album.photos.each do |photo|%>
                  <%= link_to album_path(latest_album) do %>
                    <%= image_tag photo.image ,class: "img-rounded" ,width: "140" ,height:"140"%>
                  <%end%>
                <%end%>
              </div>
            </div>
            <div class="row">
              <div id="latest-caption-container" class="col-md-11">
                <%= link_to album_path(latest_album) do %>
                  <%= latest_album.name%>
                <%end%>
              </div>
            </div>
          </div>
          <!-- /.col-lg-4 -->
        <%end%>
      </div>
    </div>
  </div>
<%end%>
<!-- /.row -->
<!-- START THE FEATURETTES -->
<div class="container">
  <div class="row">
    <%@albums.each do |album|%>
      <%= render 'albums/local_index' ,album: album%>
    <%end%>
  </div>
  <%if @bands%>
    <h2>Bands/Artists</h2>
    <ul class="list-group">
      <%@bands.each do |band|%>
        <%=render 'bands/local_index', band: band%>
      <%end%>
    </ul>
  <%end%>
  <% unless @albums.is_a? Array%>
    <div class="center-div">
      <div class="digg_pagination">
        <%= will_paginate @albums , :previous_label => '<', :next_label => '>' %>
      </div>
    <%end%>
  </div>
</div>
