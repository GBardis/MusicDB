<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Dashboard <small>Album</small>
      </h1>
      <ol class="breadcrumb">
        <li class="active">
          <i class="fa fa-dashboard"></i> Album
        </li>
      </ol>
      <%= render 'admin/flash_messages'%>
    </div>
    <div class="panel panel-default">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Release Date</th>
            <th><%= link_to "New" , admin_albums_new_path, class: "btn btn-primary btn-xs"%></th>
          </tr>
        </thead>
        <tbody>
          <%@albums.each do |album|%>
            <%= render 'albums/album_row', album: album%>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
