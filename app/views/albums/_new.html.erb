<div id="page-wrapper">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for @album,url: admin_albums_path,:html => { :multipart => true },remote: true do |f| %>
        <% if @album.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@album.errors.count, "error") %> prohibited
              this seminars from being saved:
            </h2>
            <ul>
              <% @album.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <label class= "pull-left"><%= f.label :name%></label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class= "pull-left" for="example-date-input"><%= f.label :release_date %></label>
          <%= f.date_field :release_date, class: "form-control" %>
        </div>
        <% if @album.photos.exists? %>
          <% @album.photos.each do |z| %>
            <div class="seminarimage">
              <% if !z.image_file_size.nil? %>
                <%= image_tag z.image , class: "showimage" %>
                <%= link_to "Delete Photo",admin_photo_path(z), :method => :delete  , remote: true , class: "photo_delete"%>
              <%else%>
                <p>
                  Προσθέστε μια φωτογραφία
                </p>
              <%end%>
            </div>
          <%end%>
        <%end%>
        <div class="control-group">
          <%= f.label :photos, :class => 'control-label' %>
          <div class="form-group">
            <%= file_field_tag "images[]", type: :file, multiple: true ,class: "form-control-file" %>
          </div>
        </div>
        <p>
          <%= f.submit nil , class: 'btn btn-primary' %>
        </p>
      <% end %>
      <%= link_to 'Back', admin_dashboard_path %>
    </div>
  </div>
</div>
</div>
