<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%unless album.blank?%>
      <%album.photos.each do |photo|%>
        <%= link_to album_path(album) do %>
          <%=image_tag photo.image , class:'imagesize'%>
        <%end%>
      <%end%>
    <%end%>
    <div class="caption">
      <h3><%=album.name%></h3>
      <!-- <p>...</p> -->
      <!-- <p><a href="#" class="btn btn-primary" role="button">Add to Library</a> <a href="#" class="btn btn-default glyphicon glyphicon-heart" role="button"></a></p> -->
      <% if current_user%>
        <%if !current_user.albums.collect(&:id).include?(album.id)%>
          <%=link_to 'Add to library',record_libraries_path(:album_id => album), :class => 'btn btn-primary' , :method => :post%>
        <%else%>
          <%=link_to 'Remove from library',RecordLibrary.find_by(user_id: current_user.id,album_id: album.id), :class => 'btn btn-primary' , :method => :delete%>
        <%end%>
      <%end%>
    </div>
  </div>
</div>
