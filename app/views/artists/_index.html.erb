<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <li class="active">
          <i class="fa fa-dashboard"></i> Artists
        </li>
      </ol>
      <%= render 'admin/flash_messages'%>
      <div class="panel panel-default">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>firstname</th>
              <th>Lastname</th>
              <th>Country</th>
              <th>Description</th>
              <th><%= link_to "New" , admin_artists_new_path, class: "pull-right btn btn-success btn-md"%></th>
            </tr>
          </thead>
          <tbody>
            <%@bands.each do |artist|%>
              <%= render 'bands/band_row', artist: artist%>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
