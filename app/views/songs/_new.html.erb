<div id="page-wrapper">
  <div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Dashboard <small>New Album</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i> Song
          </li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for   @song,url: admin_songs_path do |f| %>
          <% if @song.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@song.errors.count, "error") %> prohibited
                this seminars from being saved:
              </h2>
              <ul>
                <%  @song.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label class= "pull-left"><%= f.label :name%></label>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class= "pull-left" for="example-date-input"><%= f.label :genre %></label>
            <%= f.date_field :genre, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= select_tag(:album_id, options_for_select(@albums), :prompt => "Choose an Album",class: "form-control") %>
          </div>
          <div class="form-group">
            <%= select_tag(:artist_id, options_for_select(@artists), :prompt => "Choose an Artist",class: "form-control") %>
          </div>
          <p>
            <%= f.submit nil , class: 'btn btn-primary' %>
          </p>
        <% end %>
        <%= link_to 'Back', admin_dashboard_path %>
      </div>
    </div>
  </div>
</div>
