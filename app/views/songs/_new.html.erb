<div id="page-wrapper">
  <div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Dashboard <small>New Song</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i> Song
          </li>
        </ol>
        <%= render 'admin/flash_messages'%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for [:admin , @song] do |f| %>
          <% if @song.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@song.errors.count, "error") %> prohibited
                this seminars from being saved:
              </h2>
              <ul>
                <%  @song.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label class= "#"><%= f.label :name%></label>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class= "#"><%= f.label "Choose an Album"%></label>
            <%=f.select(:albums, options_from_collection_for_select(Album.all, :id,:name, @array),{}, {multiple: true , class: 'form-control select2'}) %>
          </div>
          <p>
            <%= f.submit nil , class: 'btn btn-primary' %>
          </p>
        <% end %>
        <%= link_to 'Back', admin_dashboard_path %>
      </div>
    </div>
  </div>
</div>
