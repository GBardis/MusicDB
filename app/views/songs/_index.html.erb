<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <li class="active">
          <i class="fa fa-dashboard"></i> Songs
        </li>
      </ol>
      <%= render 'admin/flash_messages'%>
      <div class="panel panel-default">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Album</th>
              <th><%= link_to "New" , admin_songs_new_path, class: "pull-right btn btn-success btn-md"%></th>
            </tr>
          </thead>
          <tbody>
            <%@songs.each do |song|%>
              <%= render 'songs/song_row', song: song%>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
