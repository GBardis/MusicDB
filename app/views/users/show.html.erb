<div class='container'>
  <div class='jumbotron'>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%if  current_user%>
      <div class="row">
        <div class="col-md-3">
          <table class="table table-sm table-dark">
            <tbody>
              <tr>
                <td>Username:</td>
                <td><%=@user.username%></td>
              </tr>
              <tr>
                <td>Email:</td>
                <td><%= @user.email%></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <h3>Following</h3>
        <table class="table table-sm table-dark">
          <tbody>
            <%@user.friendships.each do |friendship|%>
              <tr>
                <td><%=friendship.friend.username%> </td>
                <td><%=link_to "remove", friendship , :method => :delete%></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <div class="col-md-2 col-md-offset-2 ">
        <h3>Followed by</h3>
        <table class="table table-sm table-dark">
          <tbody>
            <tr>
              <% @user.inverse_friends.each do |inverse_friend|%>
                <td><%= inverse_friend.username%></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  <%else%>
    <h3>Please log in</h3>
    <%=link_to 'Login',login_path%>
  <%end%>
</div>
