<% if flash[:alert] %>
  <div class="alert alert-warning alert-dismissible" role="alert" style="padding-left:0!important;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:alert] %>
  </div>
<%end%>
