<div id="page-wrapper">
  <div class="container">
    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i> Dashboard
          </li>
        </ol>
      </div>
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12" id="flash_messages">
          <%= render 'admin/flash_messages'%>
        </div>
      </div>
      <!-- /.row -->
      <div class="col-md-4">
        <div class="row">
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <ol class="breadcrumb">
                  <li class="active">
                    <i class="fa fa-dashboard"></i> Album
                  </li>
                </ol>
                <%= render 'admin/flash_messages'%>
                <div class="panel panel-default">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Release Date</th>
                        <th>Category/Genre</th>
                        <th>Artist/Band</th>
                        <th><%= link_to "New" , admin_albums_new_path, class: "pull-right btn btn-success btn-md"%></th>
                      </tr>
                    </thead>
                    <tbody>
                      <%@albums.each do |album|%>
                        <%= render 'albums/album_row', album: album%>
                      <%end%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <%=render 'songs/index' , albums: @albums%>
        </div>
      </div>
    </div>
  </div>
</div>
