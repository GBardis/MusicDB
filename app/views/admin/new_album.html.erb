<%= render partial: 'admin/admin_dash_nav'%>
<div id="page-wrapper">
  <div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Dashboard <small>New Album</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i> Album
          </li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for @album,url: admin_albums_path do |f| %>
          <div class="form-group">
            <label class= "pull-left"><%= f.label :name%></label>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class= "pull-left" for="example-date-input"><%= f.label :release_date %></label>
            <%= f.date_field :release_date, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= select_tag(:band_id, options_for_select(@bands), :prompt => "Choose a Band",class: "form-control") %>
          </div>
          <div class="form-group">
            <%= select_tag(:artist_id, options_for_select(@artists), :prompt => "Choose an Artist",class: "form-control") %>
          </div>
          <p>
            <%= f.submit nil , class: 'btn btn-primary' %>
          </p>
        <% end %>
        <%= link_to 'Back', admin_dashboard_path %>
      </div>
    </div>
  </div>
</div>
</div>
